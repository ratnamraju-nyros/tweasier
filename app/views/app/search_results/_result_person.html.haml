%li.status{:id => "status-#{result_person.id}"}
  %ul.actions
    %li= link_to_twitter_person(content_tag(:span, "permalink"), result_person.screen_name, :class => "permalink")
    %li= render :partial => "app/friendships/inline_form", :locals => { :person => result_person }
  
  = link_to image_tag(result_person.profile_image_url), app_user_account_person_path(@account, result_person.screen_name), :class => 'profile_image'
  %ul.user_actions
    %li= link_to result_person.screen_name, app_user_account_person_path(@account, result_person.screen_name), :class => "screen_name"
    %li= link_to content_tag(:span, "direct message"), '#', :class => 'dm', :rel => h(result_person.screen_name), :title => "Direct Message #{h result_person.screen_name}"
  
  %br.clear