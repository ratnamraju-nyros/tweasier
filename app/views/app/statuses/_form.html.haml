#status_form_wrapper
  - form_tag app_user_account_statuses_path(@account), :method => :post, :id => "status_form" do
    = link_to "shorten urls", app_user_account_link_requests_path(@account), :class => "link_request" if @account.link_shortening_available?
    %h4
      = label_tag("text", "Update your status")
    #countdown_label Characters left:
    #countdown 140
    = text_area_tag 'text'
    = hidden_field_tag 'in_reply_to_status_id'
    = hidden_field_tag 'return_to', request.request_uri
    = submit_tag "Update", :id => "status_form_submit", :class => "submit_blue"